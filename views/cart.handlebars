  <section id="cart-items">
  <h1>Shopping Cart</h1>
  <ul>
    {{#each cartItems}}
      <li>
        <img src="{{item.image_url}}" alt="{{item.item_name}}" width="100">
        <h2>{{item.item_name}}</h2>
        <p>{{item.description}}</p>
        <p>Price: ${{item.price}}</p>
        <p>Quantity: {{quantity}}</p>
        <button class="btn btn-primary" onclick="removeFromCart({{id}})">Remove from Cart</button>
      </li>
    {{/each}}
  </ul>
   
  {{#if cartItems.length}}
   <div id="cart-total">
        <p>Total: $<span id="total-amount">0.00</span></p>
         <button class="btn btn-danger" onclick="checkout()">Checkout</button>
      </div>
  {{else}}
    <section id="empty-cart">
      <p>Your cart is empty.</p>
    </section>
  {{/if}}
 </section>