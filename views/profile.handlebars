<div class="container position-relative">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div>
                {{#if items.length}}
                <ul>
                    {{#each items}}
                    <li>
                        <h2>{{item_name}}</h2>
                        <p>{{description}}</p>
                        <!-- Display other item details -->
                        <img src="/uploads/{{image}}" alt="Item Image" width="200">
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p>No items found.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
